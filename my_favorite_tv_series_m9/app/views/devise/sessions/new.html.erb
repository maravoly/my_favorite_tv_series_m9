<h2 class="titulo">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :class=>"cl control-label col-sm-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"fondo"  %>
  </div>

  <div class="field">
    <%= f.label :password, :class=>"cl control-label col-sm-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class=>"fondo"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-1" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
